@model IEnumerable<GalleryPhoto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="row">   
        <div style="position:fixed; right:25px; bottom:70px;" class="text-white">
             <a asp-controller="Home" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
        </div>  
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
             {
                 <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="/Home/GalleryImage/@item.Id" alt="@item.Image" style="max-width:100px; max-height:100px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        
                        
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a class="btn btn-outline-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                            </td>
                        
                    </tr>
             }
        </tbody>
         
    </table>
   

</div>
